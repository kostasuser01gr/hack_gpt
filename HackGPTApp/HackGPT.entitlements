<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow outbound network connections (localhost Flask server, OpenAI API) -->
    <key>com.apple.security.network.client</key>
    <true/>
    <!-- Allow the app to start local server on 127.0.0.1 -->
    <key>com.apple.security.network.server</key>
    <true/>
    <!-- Keychain access for secure secret storage -->
    <key>com.apple.security.keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.hackgpt.enterprise</string>
    </array>
    <!-- Read/write user-selected files (CSV import, report export) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <!-- Access to Application Support directory -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
</dict>
</plist>
